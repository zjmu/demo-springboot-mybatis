<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ucar.train.jinmu.zhou.webmian.mapper.ArticleMapper">

    <resultMap id="mapper" type="com.ucar.train.jinmu.zhou.webmian.domain.Article">
        <id column="id" property="id"/>
        <result property="articleId" column="article_id"/>
        <result property="articleName" column="article_name"/>
        <result property="author" column="author"/>
        <result property="price" column="price"/>
        <result property="totalWordsNum" column="total_words_num"/>
        <result property="needWordsNum" column="need_words_num"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <insert id="insertArticle" parameterType="com.ucar.train.jinmu.zhou.webmian.domain.Article">
        INSERT INTO t_b_article(article_id,article_name,author,price,total_words_num,need_words_num,create_time)
        VALUES
        (
            #{article.articleId},
            #{article.articleName},
            #{article.author},
            #{article.price},
            #{article.totalWordsNum},
            #{article.needWordsNum},
            #{article.createTime}
            )
    </insert>

    <update id="updateArticle" parameterType="com.ucar.train.jinmu.zhou.webmian.domain.Article">
        UPDATE t_b_article
        SET article_name=#{article.articleName},
        author=#{article.author},
        price=#{article.price},
        total_words_num=#{article.totalWordsNum},
        need_words_num=#{article.needWordsNum},

    </update>
    <delete id="deleteAll">
        DELETE  FROM t_b_article
    </delete>

    <select id="getById" resultType="com.ucar.train.jinmu.zhou.webmian.domain.Article">
        select * from t_b_article where article_id=#{articleId}
    </select>


</mapper>