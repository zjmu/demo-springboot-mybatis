<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ucar.train.jinmu.zhou.webmian.mapper.WordsMapper">

    <resultMap id="mapper" type="com.ucar.train.jinmu.zhou.webmian.domain.Words">
        <id property="id" column="id"/>
        <result property="word" column="word"/>
        <result property="time" column="time"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <insert id="insertWords">
        INSERT INTO t_b_words
        (word,time,create_time)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
        (
            #{item.word},
            #{item.time},
            #{item.createTime}
        )
        </foreach>
    </insert>

    <delete id="deleteAll">
        DELETE  FROM t_b_words
    </delete>

    <select id="getTopN" resultMap="mapper">
        SELECT * from t_b_words
        ORDER BY time desc LIMIT #{n}
    </select>

</mapper>