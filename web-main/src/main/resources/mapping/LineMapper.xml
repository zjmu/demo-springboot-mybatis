<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ucar.train.jinmu.zhou.webmian.mapper.LineMapper">

    <resultMap id="mapper" type="com.ucar.train.jinmu.zhou.webmian.domain.Line">
        <id column="id" property="id"/>
        <result column="line_id" property="lineId"/>
        <result column="paragraph_id" property="paragraphId"/>
        <result column="text" property="text"/>
        <result column="words_num" property="wordsNum"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <insert id="insertMore" parameterType="java.util.List">
        INSERT INTO t_b_line
        (line_id,paragraph_id,text,words_num,create_time,modify_time)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
        (
            #{item.lineId},
            #{item.paragraphId},
            #{item.text},
            #{item.wordsNum},
            #{item.createTime},
            #{item.modifyTime}
            )
        </foreach>
    </insert>

    <delete id="deleteAll">
        DELETE  FROM t_b_line
    </delete>
