    <select id="getAll" resultMap="mapper">
        SELECT * FROM t_b_line
    </select>

    <select id="getLineOfParagraph" resultMap="mapper">
        SELECT b.*
        FROM t_b_paragraph a
        LEFT JOIN
        t_b_line b
        ON a.paragraph_id=b.paragraph_id
        WHERE a.paragraph_id=#{paragraphId}
        AND b.line_id=#{lineId}
    </select>

    <select id="getLines" resultMap="mapper">
        SELECT * FROM t_b_line
        WHERE paragraph_id=#{paragraphId}
    </select>
</mapper>